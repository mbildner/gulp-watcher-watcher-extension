{
  "name": "test extension",
  "manifest_version": 2,
  "version": "0.1",
  "description": "super simple chrome extension to learn how to make them",
  "background": {
    "persistent": false,
    "scripts": [
      "bg.js"
    ]
  },
  "page_action": {
    "default_icon": "green_circle.png",
    "default_title": "Build-Watchers",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*"],
      "js": ["app.js", "vendor.js"]
    }
  ],
  "permissions": ["http://localhost/"]
}
